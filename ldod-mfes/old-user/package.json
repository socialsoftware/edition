{
    "name": "user",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "test": "yarn transpile && jest",
        "start": "trap 'kill 0' SIGNINT; babel src -w -d build & serve -C -l 3002",
        "transpile": "babel src -d build",
        "build": "if [ -d user ]; then rm -r user;fi && yarn transpile && rollup -c",
        "publish": "/scripts/publish.sh user user.js  @./dist/user.tgz",
        "prepublish": "yarn build && ./scripts/pack.sh user",
        "unpublish": "./scripts/unpublish.sh user"
    },
    "jest": {
        "moduleNameMapper": {
            "^shared/(.*)$": "<rootDir>/node_modules/shared/shared/$1"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.18.6",
        "@babel/core": "^7.18.6",
        "@babel/preset-env": "^7.18.6",
        "@babel/preset-react": "^7.18.6",
        "@rollup/plugin-dynamic-import-vars": "^1.4.3",
        "@types/jest": "^28.1.4",
        "acorn-import-assertions": "^1.8.0",
        "babel-jest": "^28.1.2",
        "jest": "^28.1.2",
        "jest-environment-jsdom": "^28.1.2",
        "rollup": "^2.75.7",
        "rollup-plugin-import-assert": "^2.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "serve": "^13.0.2"
    }
}
{
    "name": "demo",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "test": "yarn transpile && jest",
        "dev": "vite",
        "transpile": "babel src -d build",
        "build": "vite build",
        "preview": "vite preview",
        "pack": "yarn build && ./scripts/pack.sh demo",
        "publish": "yarn run pack && ./scripts/publish.sh demo demo.js  @./dist/demo.tgz",
        "unpublish": "./scripts/unpublish.sh demo"
    },
    "jest": {
        "moduleNameMapper": {
            "^shared/(.*)$": "<rootDir>/node_modules/shared/dist/$1"
        }
    },
    "devDependencies": {
        "vite": "^3.0.0"
    }
}